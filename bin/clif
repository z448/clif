#!/usr/bin/env perl
#
use 5.010;

use warnings;
use strict;
use App::Clif;
use Term::ANSIColor;


my $cmd = sub {
    my $get = shift;
    for( @{clif($get)} ){
    say "\n". colored(['bright_black on_grey3 bright_black on_grey3'],"###") . colored(['grey15']," $_->{$get}->{summary}") . "\n" . colored(['grey7'],$_->{$get}->{command}) . "\n"; 
    }
};

my $req = $ARGV[0];
$cmd->($req);

